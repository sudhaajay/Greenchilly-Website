                          <li>
                            <a href="/shopCategoryFilter?id=<%= category._id %>" >
                              <option value="<%= category._id %>">
                                <%= category.name %>
                              </option></a>
                            >
                          </li>
            
                          <% } }); %>
                        </ul>
